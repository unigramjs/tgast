{
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		// Tells TypeScript to read JS files, as normally they are ignored as
		// source files.
		"allowJs": true,
		// Generate d.ts files.
		"declaration": true,
		"moduleResolution": "node",
		"skipLibCheck": true, // speed
		"strict": true,
		"target": "esnext",
		// This compiler run should only output d.ts files.
		"emitDeclarationOnly": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "lf"
	}
}
